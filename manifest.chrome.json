{
  "manifest_version": 2,
  "name": "Pandora Control",
  "description": "This extension lets you control Pandora from the keyboard",
  "version": "1.0",
  "background-ignore": {
    "persistent": false,
    "scripts": [
      "js/bg.js"
    ]
  },
  "browser_action": {
    "default_icon": "img/icon.png"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "js/pandora.js"
      ],
      "matches": [
        "*://*.pandora.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "pandora-playpause": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+MacCtrl+Space"
      },
      "description": "Play/Pause Pandora",
      "global": true
    },
    "pandora-skip": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right",
        "mac": "Command+MacCtrl+Right"
      },
      "description": "Skip Pandora Song",
      "global": true
    },
    "pandora-thumbDown": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down",
        "mac": "Command+MacCtrl+Down"
      },
      "description": "Thumb Down Pandora Song",
      "global": true
    },
    "pandora-thumbUp": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up",
        "mac": "Command+MacCtrl+Up"
      },
      "description": "Thumb Up Pandora Song",
      "global": true
    }
  },
  "permissions": [
    "*://*.pandora.com/*"
  ],
  "applications": {
    "gecko": {
      "id": "pandoracontrol@bfsmith.com"
    }
  }
}